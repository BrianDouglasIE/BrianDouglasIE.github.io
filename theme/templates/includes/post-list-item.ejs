<article class="post-item">
    <header>
        <h2><a href="<%= post.slug %>"><%= post.data.title %></a></h2>
        <p class="post-meta">Published on <time datetime="<%= post.data.date %>"><%= helpers.formatDate(post.data.date) %></time> by Brian</p>
    </header>
    <p class="post-excerpt"><%- post.excerpt %></p>
    <footer>
        <a class="pure-button" href="<%= post.slug %>">Read More</a>
    </footer>
</article>