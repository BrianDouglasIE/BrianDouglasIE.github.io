<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= post.data.title %></title>

    <link rel="stylesheet" href="/styles/external/pure.min.css">
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
<div class="wrapper">
    <%- include('site-header') %>
    <div class="breadcrumbs">
        <div class="container">
            <nav aria-label="Breadcrumb" class="breadcrumb">
                <ol>
                    <li><a href="/">Home</a></li>
                    <li aria-current="page"><%= post.data.title %></li>
                </ol>
            </nav>
        </div>
    </div>
    <main>
        <div class="container">
            <article class="post-full">
                <header>
                    <h2><%= post.data.title %></h2>
                    <p class="post-meta">Published on
                        <time datetime="<%= post.data.date %>"><%= helpers.formatDate(post.data.date) %></time>
                        by Brian
                    </p>
                </header>
                <p class="post-content"><%- post.html %></p>
                <footer>
                    <p>Until next time,</p>
                    <p>â€” Brian</p>
                </footer>
            </article>
        </div>
    </main>
    <%- include('site-footer') %>
</div>

